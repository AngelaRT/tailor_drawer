#ABNF 1.0 ISO-8859-1;

language es-ES;
tag-format <loq-semantics/1.0>;

public $root = [$GARBAGE] $user_talking;

$user_talking = ($games_list | $game_random | $no_game  | $pause | $resume |
                $previous | $other_game | $game_stop | $exit_games_scenario|
                $game_food | $game_monuments | $game_animal_sound | $game_character | $game_serie_sound |
                $go_to_differences_game | $go_to_memory_game);

$games_list = ("lista de juegos" | "dime cuales hay" | "que juegos hay" | "a que sabes jugar" |"que juegos te sabes" | "cuales te sabes" ){<@game_dialog_option "games_list">};

$game_random = ("me da igual" | "elige tu"){<@game_dialog_option "game_random">};

$no_game = ("no quiero jugar" ["a ninguno"] | "no quiero ninguno" | "a ninguno"){<@game_dialog_option "no_game">};

$pause = ( "haz una pausa" | "para un momento" | "espera un momento" ){<@game_flow_command "pause">};

$resume = ("continua" | "ya puedes continuar" | "ya puedes seguir" ){<@game_flow_command "resume">};

$restart = ("empieza de nuevo" | "vuelve a empezar" | "otra vez" ){<@game_flow_command "restart">};

$previous = ("repite lo ultimo" | "puedes repetir"){<@game_flow_command "previous">};

$other_game= ("deja ese juego" | "no quiero ese juego" |"no quiero jugar a ese"){<@game_flow_command "stop">};

$game_stop = ("mini callate" ["un rato"] | "deja de hablar" | "dejalo ya" | "quiero otro juego"){<@game_flow_command "stop">};

$exit_games_scenario = ("deja los juegos" ["mini"] | ["mini"] "termina con los juegos") {<@game_dialog_option "exit_games_scenario">};



$game_food= ("juego de la comida" | "el de la comida"){<@game_grammar "alz_game_food.gram"><@game_option "game_food">};

$game_monuments= ("juego de los monumentos" | "el de los monumentos"){<@game_grammar "alz_game_monuments.gram"><@game_option "game_monuments">};

$game_animal_sound= ("juego de los sonidos" | "juego de los animales"){<@game_grammar "alz_game_animal_sound.gram"><@game_option "game_animal_sound">};

$game_character= ("juego de los personajes" ){<@game_grammar "alz_game_character.gram"><@game_option "game_character">};

$game_serie_sound= ("juego de las series" ){<@game_grammar "alz_game_serie_sound.gram"><@game_option "game_serie_sound">};

$go_to_differences_game = ("al de las diferencias" | "al juego de las diferencias" ["mini"]) {<@game_grammar "alz_differences_game.gram"><@game_option "differences_game">};

$go_to_memory_game = ("al juego de memoria" ["mini"] | "al de las parejas" ["mini"] | "al juego de las parejas" ["mini"] | "al juego de las cartas" ["mini"] | ["mini"] "comienza el juego de las cartas" ["mini"]|["mini"] "empieza el juego de memoria") {<@game_grammar "alz_memory_game.gram"><@game_option "memory_game">};
